{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@date-io/moment": "1.x",
    "@material-ui/core": "^4.11.0",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "bootstrap": "^4.5.2",
    "downshift": "^6.0.6",
    "formik": "^2.1.5",
    "lodash": "^4.17.20",
    "lodash-es": "^4.17.15",
    "moment": "^2.29.1",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1",
    "react-gtm-module": "^2.0.11",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "styled-components": "^5.1.1",
    "uuid": "^8.3.0",
    "yup": "^0.29.3"
  },
  "scripts": {
    "start": "react-scripts start css-watch",
    "build": "react-scripts build css-build",
    "serve": "ws --port 3000 -d build --log.format dev --spa index.html",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js src/**/*.jsx",
    "css-build": "node-sass --omit-source-map-url src/App.scss src/App.css",
    "css-watch": "yarn css-build -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "jsxSingleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "local-web-server": "^4.2.1",
    "node-sass": "^4.14.1"
  }
}
